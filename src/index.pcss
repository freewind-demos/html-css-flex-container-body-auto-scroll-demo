html, body {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  overflow: hidden;
}

.container {

  display: flex;
  flex-direction: column;
  overflow: hidden;

  & > * {
    flex-shrink: 0;
    flex-grow: 0;
  }

  .container-main {
    flex-shrink: 1;
    flex-grow: 1;

    overflow: auto;

    display: flex;
    flex-direction: column;

    & > * {
      flex-shrink: 0;
      flex-grow: 0;
    }

    & > .container {
      flex-shrink: 1;
      flex-grow: 1;
    }
  }
}
